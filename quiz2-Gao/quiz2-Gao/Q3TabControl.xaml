<Window x:Class="quiz2_Gao.Q3TabControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:quiz2_Gao"
        mc:Ignorable="d"
        Title="Q3TabControl" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="1st">
                <StackPanel Margin="150,50">
                    <Label>Click On Me ... </Label>
                    <CheckBox x:Name="clickShowTab2" Unchecked="clickShowTab2_Unchecked" 
                              Checked="clickShowTab2_Checked">Show Tab 2</CheckBox>
                </StackPanel>
            </TabItem>
            <TabItem x:Name="tab2" Header="2nd" Visibility="Hidden"></TabItem>
            
        </TabControl>
    </Grid>
</Window>
